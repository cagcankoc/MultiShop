@model List<ResultInboxMessageDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Gelen Mesajlar</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Gönderen</th>
                                        <th>Konu</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>Sil</th>
                                        <th>Mesajı Aç</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th>@count</th>
                                            <td>@item.SenderId</td>
                                            <td>@item.Subject</td>
                                            <td>@item.Date.ToString("dd-MMM-yyyy")</td>
                                            <td>@item.IsRead</td>
                                            <td><a href="#" class="btn btn-info">Mesajı Aç</a></td>
                                            <td><a href="#" class="btn btn-danger">Mesajı Sil</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>