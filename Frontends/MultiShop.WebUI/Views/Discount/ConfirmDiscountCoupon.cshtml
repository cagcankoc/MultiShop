@{
    bool isDiscountCouponApplied = ViewBag.discountRate != 0;
}

<div class="col-lg-4">
    <form class="mb-30" method="post" asp-controller="Discount" asp-action="ConfirmDiscountCoupon">
        <div class="input-group">
            <input type="text" name="code" class="form-control border-0 p-4" placeholder="Kupon Kodu" value="@ViewBag.code" @(isDiscountCouponApplied ? "disabled" : "") />
            <div class="input-group-append">
                <button class="btn btn-primary" @(isDiscountCouponApplied ? "disabled" : "")>Kuponu Uygula</button>
            </div>
        </div>
        @if (isDiscountCouponApplied)
        {
            <br />
            <h6 class="font-weight-medium text-success">"@ViewBag.code" kuponu başarıyla uygulandı</h6>
        }
    </form>

    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">Toplam Ürün Tutarı</h6>
                <h6 class="font-weight-medium">$@ViewBag.totalPrice.ToString("N2")</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">Vergi Tutarı</h6>
                <h6 class="font-weight-medium">$@ViewBag.tax.ToString("N2")</h6>
            </div>
            @if (isDiscountCouponApplied)
            {
                <div class="d-flex justify-content-between">
                    <h6 class="font-weight-medium">İndirimsiz Toplam Tutar</h6>
                    <h6 class="font-weight-medium"><del>$@ViewBag.totalPriceWithTax.ToString("N2")</del></h6>
                </div>
                <div class="d-flex justify-content-between">
                    <h6 class="font-weight-medium">İndirim Oranı</h6>
                    <h6 class="font-weight-medium">%@ViewBag.discountRate</h6>
                </div>
            }
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                @if (isDiscountCouponApplied)
                {
                    <h5>İndirimli Toplam Tutar</h5>
                    <h5>$@ViewBag.totalNewPriceWithDiscount.ToString("N2")</h5>
                }
                else
                {
                    <h5>Toplam Tutar</h5>
                    <h5>$@ViewBag.totalPriceWithTax.ToString("N2")</h5>
                }
            </div>
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3" onclick="window.location.href='/Order/Index'">Sıradaki Adıma Geç</button>
        </div>
    </div>
</div>