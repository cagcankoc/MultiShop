@model CreateRegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>MultiShop Kayıt Ekranı</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/fonts/line-awesome/css/line-awesome.min.css">
	<!-- Jquery -->
	<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-30/css/style.css" />
</head>
<body class="form-v4">
	<div class="page-content">
		<div class="form-v4-content">
			<div class="form-left">
				<h2>MultiShop E-Ticaret</h2>
				<p class="text-1">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Et molestie ac feugiat sed. Diam volutpat commodo.</p>
				<div class="form-left-last">
					<a href="/Login/Index" class="account" style="background:#fff;border-top-left-radius:5px;border-bottom-right-radius:5px;width:130px;border:none;margin:6px 0 50px 0px;cursor:pointer;color:#3786bd;font-weight:700;font-size:15px;display:inline-block;text-align:center;padding:10px 0;text-decoration:none;">Giriş Yap</a>
				</div>
			</div>

			<form class="form-detail" method="post">
				<h2>Kayıt Formu</h2>

				<div class="form-group">
					<div class="form-row form-row-1">
						<label for="first_name">Adınız</label>
						<input type="text" asp-for="Name" id="first_name" class="input-text" required>
					</div>
					<div class="form-row form-row-1">
						<label for="last_name">Soyadınız</label>
						<input type="text" asp-for="Surname" id="last_name" class="input-text" required>
					</div>
				</div>

				<div class="form-row">
					<label for="your_email">Email Adresiniz</label>
					<input type="text" asp-for="Email" id="your_email" class="input-text" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
				</div>

				<div class="form-row">
					<label for="your_username">Kullanıcı Adınız</label>
					<input type="text" asp-for="Username" id="your_username" class="input-text" required>
				</div>

				<div class="form-group">
					<div class="form-row form-row-1 ">
						<label for="password">Şifre</label>
						<input type="password" asp-for="Password" id="password" class="input-text" required>
					</div>
					<div class="form-row form-row-1">
						<label for="confirm_password">Şifre Tekrar</label>
						<input type="password" asp-for="ConfirmPassword" id="confirm_password" class="input-text" required>
					</div>
				</div>

				<div class="form-row-last">
					<button class="register" style="height:35px">Kayıt Ol</button>
				</div>
			</form>

		</div>
	</div>
	<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
</body>
</html>